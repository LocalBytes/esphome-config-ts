{
  "ntc.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "ntc::NTC",
                "parents": [
                  "Component",
                  "sensor::Sensor",
                  "EntityBase"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "\u00b0C"
            },
            "accuracy_decimals": {
              "default": "1"
            },
            "device_class": {
              "default": "temperature"
            },
            "state_class": {
              "default": "measurement"
            },
            "sensor": {
              "key": "Required",
              "use_id_type": "sensor::Sensor",
              "type": "use_id"
            },
            "calibration": {
              "key": "Required"
            }
          }
        }
      }
    }
  }
}
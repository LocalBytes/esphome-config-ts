{
  "vl53l0x.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "vl53l0x::VL53L0XSensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "m"
            },
            "icon": {
              "default": "mdi:arrow-expand-vertical"
            },
            "accuracy_decimals": {
              "default": "2"
            },
            "state_class": {
              "default": "measurement"
            },
            "signal_rate_limit": {
              "key": "Optional",
              "default": "0.25"
            },
            "long_range": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "timeout": {
              "key": "Optional",
              "default": "10ms"
            },
            "enable_pin": {
              "key": "Optional",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "41",
              "data_type": "hex_uint8_t"
            }
          }
        }
      }
    }
  }
}
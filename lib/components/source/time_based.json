{
  "time_based.cover": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "cover.COVER_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "time_based::TimeBasedCover",
                "parents": [
                  "cover::Cover",
                  "EntityBase",
                  "Component"
                ]
              }
            },
            "stop_action": {
              "key": "Required",
              "type": "trigger"
            },
            "open_action": {
              "key": "Required",
              "type": "trigger"
            },
            "open_duration": {
              "key": "Required",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            },
            "close_action": {
              "key": "Required",
              "type": "trigger"
            },
            "close_duration": {
              "key": "Required",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            },
            "has_built_in_endstop": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "manual_control": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "assumed_state": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
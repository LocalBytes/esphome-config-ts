{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/generator/*"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "typescript-transform-paths/register"
    ]
  }
}

{
  "rtttl": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "rtttl::Rtttl",
                "parents": [
                  "Component"
                ]
              }
            },
            "output": {
              "key": "Required",
              "use_id_type": "output::FloatOutput",
              "type": "use_id"
            },
            "on_finished_playback": {
              "key": "Optional",
              "type": "trigger"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    },
    "action": {
      "play": {
        "type": "schema",
        "maybe": "rtttl",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "rtttl::Rtttl",
              "type": "use_id"
            },
            "rtttl": {
              "key": "Required",
              "templatable": true,
              "type": "string"
            }
          }
        }
      },
      "stop": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "rtttl::Rtttl",
              "type": "use_id"
            }
          }
        }
      }
    },
    "condition": {
      "is_playing": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "rtttl::Rtttl",
              "type": "use_id"
            }
          }
        }
      }
    }
  }
}
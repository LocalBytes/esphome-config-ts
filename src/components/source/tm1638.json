{
  "tm1638.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "tm1638::TM1638Key",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "tm1638_id": {
              "key": "GeneratedID",
              "use_id_type": "tm1638::TM1638Component",
              "type": "use_id"
            },
            "key": {
              "key": "Required",
              "type": "integer"
            }
          }
        }
      }
    }
  },
  "tm1638.display": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",

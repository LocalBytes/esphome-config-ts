{
  "uart": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "uart::UARTComponent",
                "parents": [
                  "Component"
                ]
              }
            },
            "baud_rate": {
              "key": "Required",
              "type": "integer"
            },
            "tx_pin": {
              "key": "Optional",
              "schema": true,
              "internal": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "rx_pin": {
              "key": "Optional"
            },
            "rx_buffer_size": {
              "key": "Optional",
              "default": "256"
            },
            "stop_bits": {
              "key": "Optional",
              "default": "1",
              "type": "enum",
              "values": {
                "1": null,
                "2": null
              }
            },
            "data_bits": {
              "key": "Optional",
              "default": "8",
              "type": "integer"
            },
            "parity": {
              "key": "Optional",
              "default": "NONE",
              "type": "enum",
              "values": {
                "NONE": null,
                "EVEN": null,
                "ODD": null
              }
            },
            "debug": {
              "key": "Optional"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      },
      "UART_DEVICE_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "uart_id": {
              "key": "GeneratedID",
              "use_id_type": "uart::UARTComponent",
              "type": "use_id"
            }
          }
        }
      }
    },
    "action": {
      "write": {
        "type": "schema",
        "maybe": "data",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "uart::UARTComponent",
              "type": "use_id"
            },
            "data": {
              "key": "Required",
              "templatable": true
            }
          }
        }
      }
    }
  },
  "uart.switch": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "switch._SWITCH_SCHEMA",
            "uart.UART_DEVICE_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "restore_mode": {
              "key": "Optional",
              "default": "ALWAYS_OFF",
              "type": "enum",
              "values": {
                "RESTORE_DEFAULT_OFF": null,
                "RESTORE_DEFAULT_ON": null,
                "ALWAYS_OFF": null,
                "ALWAYS_ON": null,
                "RESTORE_INVERTED_DEFAULT_OFF": null,
                "RESTORE_INVERTED_DEFAULT_ON": null,
                "DISABLED": null
              }
            },
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "uart::UARTSwitch",
                "parents": [
                  "switch_::Switch",
                  "EntityBase",
                  "uart::UARTDevice",
                  "Component"
                ]
              }
            },
            "data": {
              "key": "Required"
            },
            "send_every": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            }
          }
        }
      }
    }
  }
}
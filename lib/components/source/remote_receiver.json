{
  "remote_receiver": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "remote_receiver::RemoteReceiverComponent",
                "parents": [
                  "remote_base::RemoteReceiverBase",
                  "Component"
                ]
              }
            },
            "pin": {
              "key": "Required",
              "schema": true,
              "internal": true,
              "modes": [
                "input"
              ],
              "type": "pin"
            },
            "dump": {
              "key": "Optional",
              "default": "[]"
            },
            "tolerance": {
              "key": "Optional",
              "default": "25"
            },
            "buffer_size": {
              "key": "Optional",
              "default": "1000b"
            },
            "filter": {
              "key": "Optional",
              "default": "50us",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_microseconds"
                ]
              }
            },
            "idle": {
              "key": "Optional",
              "default": "10ms",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_microseconds"
                ]
              }
            },
            "memory_blocks": {
              "key": "Optional",
              "default": "3"
            },
            "on_canalsat": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_canalsatld": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_coolix": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_dish": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_jvc": {
              "key": "Optional",
              "type": "trigger"
            },

{
  "mpr121": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "mpr121::MPR121Component",
                "parents": [
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "release_debounce": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "touch_debounce": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "touch_threshold": {
              "key": "Optional",
              "default": "11",
              "type": "integer"
            },
            "release_threshold": {
              "key": "Optional",
              "default": "6",
              "type": "integer"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "90",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    }
  },
  "mpr121.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "mpr121::MPR121Channel",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "mpr121_id": {
              "key": "GeneratedID",
              "use_id_type": "mpr121::MPR121Component",
              "type": "use_id"
            },
            "channel": {
              "key": "Required",
              "type": "integer"
            },
            "touch_threshold": {
              "key": "Optional",
              "type": "integer"
            },
            "release_threshold": {
              "key": "Optional",
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
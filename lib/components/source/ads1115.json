{
  "ads1115": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "ads1115::ADS1115Component",
                "parents": [
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "continuous_mode": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Required",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    }
  },
  "ads1115.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "ads1115::ADS1115Sensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "voltage_sampler::VoltageSampler"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "V"
            },
            "accuracy_decimals": {
              "default": "3"
            },
            "device_class": {
              "default": "voltage"
            },
            "state_class": {
              "default": "measurement"
            },
            "ads1115_id": {
              "key": "GeneratedID",
              "use_id_type": "ads1115::ADS1115Component",
              "type": "use_id"
            },
            "multiplexer": {
              "key": "Required",
              "type": "enum",
              "values": {
                "A0_A1": null,
                "A0_A3": null,
                "A1_A3": null,
                "A2_A3": null,
                "A0_GND": null,
                "A1_GND": null,
                "A2_GND": null,
                "A3_GND": null
              }
            },
            "gain": {
              "key": "Required"
            },
            "resolution": {
              "key": "Optional",
              "default": "16_BITS",
              "type": "enum",
              "values": {
                "16_BITS": null,
                "12_BITS": null
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          }
        }
      }
    }
  }
}
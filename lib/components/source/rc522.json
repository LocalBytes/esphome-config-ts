{
  "rc522": {
    "schemas": {
      "RC522_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "rc522::RC522",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "reset_pin": {
              "key": "Optional",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "on_tag": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_tag_removed": {
              "key": "Optional",
              "type": "trigger"
            },
            "update_interval": {
              "key": "Optional",
              "default": "1s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  },
  "rc522.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "rc522::RC522BinarySensor",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "rc522_id": {
              "key": "GeneratedID",
              "use_id_type": "rc522::RC522",
              "type": "use_id"
            },
            "uid": {
              "key": "Required"
            }
          }
        }
      }
    }
  }
}
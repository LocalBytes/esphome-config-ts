{
  "mhz19.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "mhz19::MHZ19Component",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "uart::UARTDevice"
                ]
              }
            },
            "co2": {
              "key": "Required",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "ppm"
                  },
                  "icon": {
                    "default": "mdi:molecule-co2"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "carbon_dioxide"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "temperature": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b0C"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "temperature"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "automatic_baseline_calibration": {
              "key": "Optional",
              "type": "boolean"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "uart_id": {
              "key": "GeneratedID",
              "use_id_type": "uart::UARTComponent",
              "type": "use_id"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      },
      "CALIBRATION_ACTION_SCHEMA": {
        "type": "schema",
        "maybe": "id",
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "use_id_type": "mhz19::MHZ19Component",
              "type": "use_id"
            }
          }
        }
      }
    }
  },
  "mhz19": {
    "action": {
      "abc_disable": {
        "type": "schema",
        "schema": {
          "extends": [
            "mhz19.sensor.CALIBRATION_ACTION_SCHEMA"
          ]
        }
      },
      "abc_enable": {
        "type": "schema",
        "schema": {
          "extends": [
            "mhz19.sensor.CALIBRATION_ACTION_SCHEMA"
          ]
        }
      },
      "calibrate_zero": {
        "type": "schema",
        "schema": {
          "extends": [
            "mhz19.sensor.CALIBRATION_ACTION_SCHEMA"
          ]
        }
      }
    }
  }
}
              "id_type": {
                "class": "nextion::NextionTextSensor",
                "parents": [
                  "text_sensor::TextSensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "never"
            },
            "nextion_id": {
              "key": "GeneratedID",
              "use_id_type": "nextion::Nextion",
              "type": "use_id"
            },
            "background_color": {
              "key": "Optional",
              "use_id_type": "Color",
              "type": "use_id"
            },
            "foreground_color": {
              "key": "Optional",
              "use_id_type": "Color",
              "type": "use_id"
            },
            "visible": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "component_name": {
              "key": "Required"
            },
            "font_id": {
              "key": "Optional",
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
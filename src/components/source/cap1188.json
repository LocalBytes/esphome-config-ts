{
  "cap1188": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "cap1188::CAP1188Component",
                "parents": [
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "reset_pin": {
              "key": "Optional",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "touch_threshold": {
              "key": "Optional",
              "default": "32",
              "type": "integer"
            },
            "allow_multiple_touches": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "41",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    }
  },
  "cap1188.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "cap1188::CAP1188Channel",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "cap1188_id": {
              "key": "GeneratedID",
              "use_id_type": "cap1188::CAP1188Component",
              "type": "use_id"
            },
            "channel": {
              "key": "Required",
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
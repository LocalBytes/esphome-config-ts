{
  "max7219.display": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "display.BASIC_DISPLAY_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "max7219::MAX7219Component",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "spi::SPIDevice"
                ]
              }
            },
            "num_chips": {
              "key": "Optional",
              "default": "1",
              "type": "integer"
            },
            "intensity": {
              "key": "Optional",
              "default": "15",
              "type": "integer"
            },
            "reverse_enable": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "update_interval": {
              "key": "Optional",
              "default": "1s"
            },
            "spi_id": {
              "key": "GeneratedID",
              "use_id_type": "spi::SPIComponent",
              "type": "use_id"
            },
            "cs_pin": {
              "key": "Required",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            }
          }
        }
      }
    }
  }
}
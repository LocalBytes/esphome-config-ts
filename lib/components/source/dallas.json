{
  "dallas": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "dallas::DallasComponent",
                "parents": [
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "pin": {
              "key": "Required",
              "schema": true,
              "internal": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    }
  },
  "dallas.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "dallas::DallasTemperatureSensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "\u00b0C"
            },
            "accuracy_decimals": {
              "default": "1"
            },
            "device_class": {
              "default": "temperature"
            },
            "state_class": {
              "default": "measurement"
            },
            "dallas_id": {
              "key": "GeneratedID",
              "use_id_type": "dallas::DallasComponent",
              "type": "use_id"
            },
            "address": {
              "key": "Optional"
            },
            "index": {
              "key": "Optional",
              "type": "integer",
              "data_type": "positive_int"
            },
            "resolution": {
              "key": "Optional",
              "default": "12",
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
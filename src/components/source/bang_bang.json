{
  "bang_bang.climate": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "climate.CLIMATE_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "bang_bang::BangBangClimate",
                "parents": [
                  "climate::Climate",
                  "EntityBase",
                  "Component"
                ]
              }
            },
            "sensor": {
              "key": "Required",
              "use_id_type": "sensor::Sensor",
              "type": "use_id"
            },
            "default_target_temperature_low": {
              "key": "Required"
            },
            "default_target_temperature_high": {
              "key": "Required"
            },
            "idle_action": {
              "key": "Required",
              "type": "trigger"
            },
            "cool_action": {
              "key": "Optional",
              "type": "trigger"
            },
            "heat_action": {
              "key": "Optional",
              "type": "trigger"
            },
            "away_config": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "default_target_temperature_low": {
                    "key": "Required"
                  },
                  "default_target_temperature_high": {
                    "key": "Required"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
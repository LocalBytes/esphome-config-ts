{
  "debug": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "debug::DebugComponent",
                "parents": [
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  },
  "debug.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "debug_id": {
              "key": "GeneratedID",
              "use_id_type": "debug::DebugComponent",
              "type": "use_id"
            },
            "free": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "B"
                  },
                  "icon": {
                    "default": "mdi:counter"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            },
            "block": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "B"
                  },
                  "icon": {
                    "default": "mdi:counter"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            },
            "fragmentation": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "%"
                  },
                  "icon": {
                    "default": "mdi:counter"
                  },
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            },
            "loop_time": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "ms"
                  },
                  "icon": {
                    "default": "mdi:timer-outline"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "debug.text_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "debug_id": {
              "key": "GeneratedID",
              "use_id_type": "debug::DebugComponent",
              "type": "use_id"
            },
            "device": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "text_sensor.TEXT_SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:chip"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            },
            "reset_reason": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "text_sensor.TEXT_SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:restart"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
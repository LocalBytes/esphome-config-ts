{
  "tmp1075.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "tmp1075::TMP1075Sensor",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "sensor::Sensor",
                  "EntityBase",
                  "i2c::I2CDevice"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "\u00b0C"
            },
            "icon": {
              "default": "mdi:thermometer"
            },
            "accuracy_decimals": {
              "default": "2"
            },
            "device_class": {
              "default": "temperature"
            },
            "state_class": {
              "default": "measurement"
            },
            "conversion_rate": {
              "key": "Optional",
              "type": "enum",
              "values": {
                "27.5ms": null,
                "55ms": null,
                "110ms": null,
                "220ms": null
              }
            },
            "alert": {
              "key": "Optional",
              "default": "{}",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "limit_low": {
                    "key": "Optional"
                  },
                  "limit_high": {
                    "key": "Optional"
                  },
                  "fault_count": {
                    "key": "Optional",
                    "type": "integer"
                  },
                  "polarity": {
                    "key": "Optional",
                    "type": "enum",
                    "values": {
                      "ACTIVE_LOW": null,
                      "ACTIVE_HIGH": null
                    }
                  },
                  "function": {
                    "key": "Optional",
                    "type": "enum",
                    "values": {
                      "COMPARATOR": null,
                      "INTERRUPT": null
                    }
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "72",
              "data_type": "hex_uint8_t"
            }
          }
        }
      }
    }
  }
}
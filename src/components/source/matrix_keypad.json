{
  "matrix_keypad": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "matrix_keypad::MatrixKeypad",
                "parents": [
                  "key_provider::KeyProvider",
                  "Component"
                ]
              }
            },
            "rows": {
              "key": "Required",
              "is_list": true,
              "type": "schema",
              "schema": {
                "config_vars": {
                  "pin": {
                    "key": "Required",
                    "schema": true,
                    "modes": [
                      "output"
                    ],
                    "type": "pin"
                  }
                }
              }
            },
            "columns": {
              "key": "Required",
              "is_list": true,
              "type": "schema",
              "schema": {
                "config_vars": {
                  "pin": {
                    "key": "Required",
                    "schema": true,
                    "modes": [
                      "input"
                    ],
                    "type": "pin"
                  }
                }
              }
            },
            "keys": {
              "key": "Optional",
              "type": "string"
            },
            "debounce_time": {
              "key": "Optional",
              "default": "1",
              "type": "integer"
            },
            "has_diodes": {
              "key": "Optional",
              "type": "boolean"
            }
          }
        },
        "is_list": true
      }
    }
  },
  "matrix_keypad.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "matrix_keypad::MatrixKeypadBinarySensor",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "keypad_id": {
              "key": "GeneratedID",
              "use_id_type": "matrix_keypad::MatrixKeypad",
              "type": "use_id"
            },
            "row": {
              "key": "Optional",
              "type": "integer"
            },
            "col": {
              "key": "Optional",
              "type": "integer"
            },
            "key": {
              "key": "Optional",
              "type": "string"
            }
          }
        }
      }
    }
  }
}
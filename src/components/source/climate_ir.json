{
  "climate_ir": {
    "schemas": {
      "CLIMATE_IR_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "climate.CLIMATE_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "transmitter_id": {
              "key": "GeneratedID",
              "use_id_type": "remote_transmitter::RemoteTransmitterComponent",
              "type": "use_id"
            },
            "supports_cool": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "supports_heat": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "sensor": {
              "key": "Optional",
              "use_id_type": "sensor::Sensor",
              "type": "use_id"
            }
          }
        }
      },
      "CLIMATE_IR_WITH_RECEIVER_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "climate_ir.CLIMATE_IR_SCHEMA"
          ],
          "config_vars": {
            "receiver_id": {
              "key": "Optional",
              "use_id_type": "remote_receiver::RemoteReceiverComponent",
              "type": "use_id"
            }
          }
        }
      }
    }
  }
}
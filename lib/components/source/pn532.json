{
  "pn532": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "is_list": true
      },
      "PN532_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "pn532::PN532",
                "parents": [
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "on_tag": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_finished_write": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_tag_removed": {
              "key": "Optional",
              "type": "trigger"
            },
            "update_interval": {
              "key": "Optional",
              "default": "1s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    },
    "condition": {
      "is_writing": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "pn532::PN532",
              "type": "use_id"
            }
          }
        }
      }
    }
  },
  "pn532.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "binary_sensor.BINARY_SENSOR_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "pn532::PN532BinarySensor",
                "parents": [
                  "binary_sensor::BinarySensor",
                  "EntityBase"
                ]
              }
            },
            "pn532_id": {
              "key": "GeneratedID",
              "use_id_type": "pn532::PN532",
              "type": "use_id"
            },
            "uid": {
              "key": "Required"
            }
          }
        }
      }
    }
  }
}
{
  "max31855.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "max31855::MAX31855Sensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "spi::SPIDevice"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "\u00b0C"
            },
            "accuracy_decimals": {
              "default": "1"
            },
            "device_class": {
              "default": "temperature"
            },
            "reference_temperature": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b0C"
                  },
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": "temperature"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "spi_id": {
              "key": "GeneratedID",
              "use_id_type": "spi::SPIComponent",
              "type": "use_id"
            },
            "cs_pin": {
              "key": "Required",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            }
          }
        }
      }
    }
  }
}
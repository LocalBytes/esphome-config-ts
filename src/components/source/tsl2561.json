{
  "tsl2561.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "tsl2561::TSL2561Sensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "lx"
            },
            "accuracy_decimals": {
              "default": "1"
            },
            "device_class": {
              "default": "illuminance"
            },
            "state_class": {
              "default": "measurement"
            },
            "integration_time": {
              "key": "Optional",
              "default": "402ms"
            },
            "gain": {
              "key": "Optional",
              "default": "1X",
              "type": "enum",
              "values": {
                "1X": null,
                "16X": null
              }
            },
            "is_cs_package": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "57",
              "data_type": "hex_uint8_t"
            }
          }
        }
      }
    }
  }
}
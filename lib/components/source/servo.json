{
  "servo": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "id_type": {
                "class": "servo::Servo",
                "parents": [
                  "Component"
                ]
              }
            },
            "output": {
              "key": "Required",
              "use_id_type": "output::FloatOutput",
              "type": "use_id"
            },
            "min_level": {
              "key": "Optional",
              "default": "3%"
            },
            "idle_level": {
              "key": "Optional",
              "default": "7.5%"
            },
            "max_level": {
              "key": "Optional",
              "default": "12%"
            },
            "restore": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "auto_detach_time": {
              "key": "Optional",
              "default": "0s",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            },
            "transition_length": {
              "key": "Optional",
              "default": "0s",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    },
    "action": {
      "write": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "use_id_type": "servo::Servo",
              "type": "use_id"
            },
            "level": {
              "key": "Required",
              "templatable": true
            }
          }
        }
      },
      "detach": {
        "type": "schema",
        "maybe": "id",
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "use_id_type": "servo::Servo",
              "type": "use_id"
            }
          }
        }
      }
    }
  }
}
{
  "pm1006.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "pm1006::PM1006Component",
                "parents": [
                  "uart::UARTDevice",
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "pm_2_5": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b5g/m\u00b3"
                  },
                  "icon": {
                    "default": "mdi:blur"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "pm25"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "uart_id": {
              "key": "GeneratedID",
              "use_id_type": "uart::UARTComponent",
              "type": "use_id"
            },
            "update_interval": {
              "key": "Optional",
              "default": "never"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}
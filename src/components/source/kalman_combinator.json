{
  "kalman_combinator.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "kalman_combinator::KalmanCombinatorComponent",
                "parents": [
                  "Component",
                  "sensor::Sensor",
                  "EntityBase"
                ]
              }
            },
            "process_std_dev": {
              "key": "Required",
              "data_type": "positive_float"
            },
            "sources": {
              "key": "Required",
              "is_list": true,
              "type": "schema",
              "schema": {
                "config_vars": {
                  "source": {
                    "key": "Required",
                    "use_id_type": "sensor::Sensor",
                    "type": "use_id"
                  },
                  "error": {
                    "key": "Required",
                    "templatable": true,
                    "data_type": "positive_float"
                  }
                }
              }
            },
            "std_dev": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              }
            }
          }
        }
      }
    }
  }
}
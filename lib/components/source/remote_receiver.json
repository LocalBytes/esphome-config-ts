              "key": "Optional",
              "type": "trigger"
            },
            "on_sony": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_raw": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_drayton": {
              "key": "Optional",
              "type": "trigger"
            },

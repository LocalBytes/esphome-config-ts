{
  "sim800l": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "sim800l::Sim800LComponent",
                "parents": [
                  "Component"
                ]
              }
            },
            "on_sms_received": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_incoming_call": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_call_connected": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_call_disconnected": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_ussd_received": {
              "key": "Optional",
              "type": "trigger"
            },
            "update_interval": {
              "key": "Optional",
              "default": "5s"
            },
            "uart_id": {
              "key": "GeneratedID",
              "use_id_type": "uart::UARTComponent",
              "type": "use_id"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    },
    "action": {
      "send_sms": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            },
            "recipient": {
              "key": "Required",
              "templatable": true,
              "type": "string"
            },
            "message": {
              "key": "Required",
              "templatable": true,
              "type": "string"
            }
          }
        }
      },
      "dial": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            },
            "recipient": {
              "key": "Required",
              "templatable": true,
              "type": "string"
            }
          }
        }
      },
      "connect": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            }
          }
        }
      },
      "send_ussd": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            },
            "ussd": {
              "key": "Required",
              "templatable": true,
              "type": "string"
            }
          }
        }
      },
      "disconnect": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            }
          }
        }
      }
    }
  },
  "sim800l.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "sim800l_id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            },
            "rssi": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "dBm"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "signal_strength"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "sim800l.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "sim800l_id": {
              "key": "GeneratedID",
              "use_id_type": "sim800l::Sim800LComponent",
              "type": "use_id"
            },
            "registered": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "binary_sensor.BINARY_SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "entity_category": {
                    "default": "diagnostic"
                  },
                  "device_class": {
                    "default": "connectivity"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
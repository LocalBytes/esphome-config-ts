{
  "am43.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "am43::Am43",
                "parents": [
                  "ble_client::BLEClientNode",
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "battery_level": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "%"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "battery"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              }
            },
            "illuminance": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "%"
                  },
                  "icon": {
                    "default": "mdi:brightness-5"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  }
                }
              }
            },
            "ble_client_id": {
              "key": "GeneratedID",
              "use_id_type": "ble_client::BLEClient",
              "type": "use_id"
            },
            "update_interval": {
              "key": "Optional",
              "default": "120s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  },
  "am43.cover": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "cover.COVER_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "am43::Am43Component",
                "parents": [
                  "cover::Cover",
                  "EntityBase",
                  "ble_client::BLEClientNode",
                  "Component"
                ]
              }
            },
            "pin": {
              "key": "Optional",
              "default": "8888",
              "type": "integer"
            },
            "invert_position": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "ble_client_id": {
              "key": "GeneratedID",
              "use_id_type": "ble_client::BLEClient",
              "type": "use_id"
            }
          }
        }
      }
    }
  }
}
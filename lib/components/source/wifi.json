{
  "wifi": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "wifi::WiFiComponent",
                "parents": [
                  "Component"
                ]
              }
            },
            "networks": {
              "key": "Optional",
              "is_list": true,
              "type": "schema",
              "schema": {
                "extends": [
                  "wifi.WIFI_NETWORK_BASE"
                ],
                "config_vars": {
                  "bssid": {
                    "key": "Optional"
                  },
                  "hidden": {
                    "key": "Optional",
                    "type": "boolean"
                  },
                  "priority": {
                    "key": "Optional",
                    "default": "0.0"
                  },
                  "eap": {
                    "key": "Optional",
                    "type": "schema",
                    "schema": {
                      "extends": [
                        "wifi.EAP_AUTH_SCHEMA"
                      ]
                    }
                  }
                }
              }
            },
            "ssid": {
              "key": "Optional"
            },
            "password": {
              "key": "Optional"
            },
            "manual_ip": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "wifi.STA_MANUAL_IP_SCHEMA"
                ]
              }
            },
            "eap": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "wifi.EAP_AUTH_SCHEMA"
                ]
              }
            },
            "ap": {
              "key": "Optional"
            },
            "domain": {
              "key": "Optional",
              "default": ".local"
            },
            "reboot_timeout": {
              "key": "Optional",
              "default": "15min",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            },
            "power_save_mode": {
              "key": "Optional",
              "default": "none",
              "type": "enum",
              "values": {
                "NONE": null,
                "LIGHT": null,
                "HIGH": null
              }
            },
            "fast_connect": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "use_address": {
              "key": "Optional",
              "type": "string"
            },
            "output_power": {
              "key": "Optional",
              "default": "20.0"
            },
            "enable_btm": {
              "key": "Optional",
              "type": "boolean"
            },
            "enable_rrm": {
              "key": "Optional",
              "type": "boolean"
            },
            "passive_scan": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "enable_on_boot": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            }
          }
        }
      },
      "STA_MANUAL_IP_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "dns1": {
              "key": "Optional",
              "default": "0.0.0.0"
            },
            "dns2": {
              "key": "Optional",
              "default": "0.0.0.0"
            },
            "static_ip": {
              "key": "Required"
            },
            "gateway": {
              "key": "Required"
            },
            "subnet": {
              "key": "Required"
            }
          }
        }
      },
      "EAP_AUTH_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "identity": {
              "key": "Optional",
              "type": "string"
            },
            "username": {
              "key": "Optional",
              "type": "string"
            },
            "password": {
              "key": "Optional",
              "type": "string"
            },
            "certificate_authority": {
              "key": "Optional"
            },
            "certificate": {
              "key": "Optional"
            },
            "key": {
              "key": "Optional"
            }
          }
        }
      },
      "WIFI_NETWORK_BASE": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "wifi::WiFiAP",
                "parents": []
              }
            },
            "ssid": {
              "key": "Optional"
            },
            "password": {
              "key": "Optional"
            },
            "channel": {
              "key": "Optional"
            },
            "manual_ip": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "wifi.STA_MANUAL_IP_SCHEMA"
                ]
              }
            }
          }
        }
      }
    },
    "action": {
      "enable": {},
      "disable": {}
    },
    "condition": {
      "connected": {},
      "enabled": {}
    }
  }
}
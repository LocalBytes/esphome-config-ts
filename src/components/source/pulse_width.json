{
  "pulse_width.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "pulse_width::PulseWidthSensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "s"
            },
            "icon": {
              "default": "mdi:timer-outline"
            },
            "accuracy_decimals": {
              "default": "3"
            },
            "state_class": {
              "default": "measurement"
            },
            "pin": {
              "key": "Required",
              "schema": true,
              "internal": true,
              "modes": [
                "input"
              ],
              "type": "pin"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          }
        }
      }
    }
  }
}
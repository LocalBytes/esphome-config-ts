{
  "max44009.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "unit_of_measurement": {
              "default": "lx"
            },
            "accuracy_decimals": {
              "default": "3"
            },
            "device_class": {
              "default": "illuminance"
            },
            "state_class": {
              "default": "measurement"
            },
            "id": {
              "id_type": {
                "class": "max44009::MAX44009Sensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "mode": {
              "key": "Optional",
              "default": "low_power",
              "type": "enum",
              "values": {
                "auto": null,
                "low_power": null,
                "continuous": null
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "74",
              "data_type": "hex_uint8_t"
            }
          }
        }
      }
    }
  }
}
{
  "mics_4514.sensor": {
    "schemas": {
      "common_sensor_schema": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA"
          ],
          "config_vars": {
            "unit_of_measurement": {
              "default": "ppm"
            },
            "accuracy_decimals": {
              "default": "2"
            },
            "state_class": {
              "default": "measurement"
            }
          }
        }
      },
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "mics_4514::MICS4514Component",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "nitrogen_dioxide": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "ppm"
                  },
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "carbon_monoxide": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "mics_4514.sensor.common_sensor_schema"
                ]
              }
            },
            "methane": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "mics_4514.sensor.common_sensor_schema"
                ]
              }
            },
            "ethanol": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "mics_4514.sensor.common_sensor_schema"
                ]
              }
            },
            "hydrogen": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "mics_4514.sensor.common_sensor_schema"
                ]
              }
            },
            "ammonia": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "mics_4514.sensor.common_sensor_schema"
                ]
              }
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "117",
              "data_type": "hex_uint8_t"
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}